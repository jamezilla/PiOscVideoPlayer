#include "ofMain.h"
#include "networkPlayerApp.h"

#define SETTINGS_XML_FILE       "settings.xml"
#define DEFAULT_VIDEO_DIRECTORY "videos"
#define DEFAULT_OSC_LOCAL_PORT  57121
#define DEFAULT_OSC_LOCAL_HOST  "127.0.0.1"
#define DEFAULT_OSC_REMOTE_PORT 57120
#define DEFAULT_OSC_REMOTE_HOST "10.0.0.1"


int main()
{
ofSetLogLevel(OF_LOG_VERBOSE);
	ofSetupOpenGL(1280, 720, OF_WINDOW);

    ofxXmlSettings settings;
    if (settings.loadFile(SETTINGS_XML_FILE)) {
settings.getValue("settings:osc:localPort", DEFAULT_OSC_LOCAL_PORT);
        ofRunApp( new networkPlayerApp());


    } else {
        ofLogError("Position file did not load!");
    }

}
